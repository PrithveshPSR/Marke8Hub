<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Activity.AreaInterestActivity">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_30dp">


        <com.example.prithvi.marke8hub.Views.BRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area of Interest"
            android:layout_gravity="center"
            android:textSize="@dimen/margin_20sp"
            android:textColor="@color/sub_heading_grey"/>

        <ImageView
            android:id="@+id/area_interest_header_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/canvas_underline_textview"
            android:layout_marginBottom="@dimen/margin_10dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/selected_image_btn"
        android:layout_below="@+id/ll_1"
        android:layout_alignEnd="@id/ll_1"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:src="@drawable/arrow"
        android:layout_centerHorizontal="true"
        android:gravity="center|clip_horizontal"
        android:background="@drawable/canvas_round_btn"/>

</RelativeLayout>
